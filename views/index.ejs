<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <link href="/css/styles.css" rel="stylesheet" />
    <link href="/css/coverShapes.css" rel="stylesheet" />
    <link href="/css/packagePreview.css" rel="stylesheet" />
    <script defer src="/js/packagePreview.js"></script>
    <title>Document</title>
  </head>
  <!-- color scheme -->
  <!-- https://coolors.co/palette/ff8811-f4d06f-fff8f0-9dd9d2-392f5a -->
  <body class="h-full bg-[#FFF8F0]">
    <!-- NAVBAR -->

    <nav
      class="bg-[#9DD9D2] h-16 w-full flex justify-center items-center sticky top-0 text-lg shadow-md z-20"
    >
      <div class="h-12 w-full hidden md:flex justify-evenly items-center mx-32">
        <ul class="flex items-center">
          <a
            class="h-full px-4 cursor-pointer hover:bg-[#FFF8F0] transition-all delay-75 duration-300 rounded-full"
            href="#home"
          >
            Home
          </a>

          <a
            class="h-full px-4 cursor-pointer hover:bg-[#FFF8F0] transition-all delay-75 duration-300 rounded-full whitespace-nowrap"
            href="#about"
          >
            About Us
          </a>

          <!-- <Link to="package-container" smooth={true}>
            <li class="h-full px-4 cursor-pointer hover:bg-[#FFF8F0] transition-all delay-75 duration-300 rounded-full">
              Packages
            </li>
          </Link> -->

          <a
            class="h-full px-4 cursor-pointer hover:bg-[#FFF8F0] transition-all delay-75 duration-300 rounded-full"
            href="#contact"
          >
            Contact
          </a>
        </ul>
      </div>
    </nav>

    <!-- COVER -->

    <div id="home" class="h-screen flex justify-center items-center -mt-16">
      <div
        id="wrapper"
        class="z-0 rotate-90 sm:rotate-0"
        data-configuration="1"
        data-roundness="1"
      >
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
      </div>
      <img
        id="cover-image"
        class="z-10"
        src="/public/images/1057012.png"
        alt="#"
      />
    </div>

    <!-- ABOUT/PACKAGEPREVIEW -->

    <main
      id="about"
      class="mx-6 pt-24 mb-16 md:mx-48 items-center pb-16 border-b-2 border-[#9DD9D2]"
    >
      <div
        class="w-full flex flex-col text-center border-t-2 mb-16 border-[#9DD9D2]"
      >
        <h1 class="text-4xl my-16">What we offer</h1>
        <p class="mx-16 lg:mx-44 min-[1700px]:mx-96">
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Nostrum quasi
          temporibus et eligendi nihil, consectetur natus. Odit consectetur
          quaerat quam officia quasi. Debitis labore laboriosam error culpa,
          reprehenderit consectetur commodi aliquid id facilis, quod vitae.
        </p>
      </div>
      <div
        class="package-container flex justify-center items-center overflow-hidden pb-12 border-[#9DD9D2]"
      >
        <div id="packages">
          <% for(let i=0; i < data.length; i++) {%>
          <a href="<%= `package/${data[i].id}` %>">
            <div class="package">
              <div class="package-content">
                <div class="package-image">
                  <i class="<%= `fa-solid ${data[i].image}` %>"> </i>
                </div>
                <div class="package-info-wrapper">
                  <div class="package-info">
                    <div class="package-info-title text-[#FFF8F0]">
                      <h1><%= data[i].title %></h1>
                      <!-- <p><%= data[i].mini_desc %></p> -->
                      <h4>Learn to...</h4>
                    </div>
                    <!-- <img src={data.img} alt="" /> -->
                  </div>
                </div>
              </div>
            </div>
          </a>
          <% } %>
        </div>
      </div>
    </main>

    <!-- CONTACT PAGE -->

    <div id="contact" class="contact my-24 text-center">
      <h1 class="text-4xl my-16">Got questions?</h1>
      <p class="text-lg mt-5">
        Get in touch for any queries regarding our packages or to book a free
        consultation!
      </p>
      <form
        onSubmit="{submit}"
        ref="{form}"
        class="w-full mt-12 grid justify-center"
      >
        <div class="flex flex-wrap -mx-3 mb-6">
          <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            <label
              class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
              htmlFor="grid-first-name"
            >
              First Name
            </label>
            <input
              class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
              id="grid-first-name"
              type="text"
              placeholder="Jane"
              required
              name="from_fname"
            />
          </div>
          <div class="w-full md:w-1/2 px-3">
            <label
              class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
              htmlFor="grid-last-name"
            >
              Last Name
            </label>
            <input
              class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
              id="grid-last-name"
              type="text"
              placeholder="Doe"
              required
              name="from_lname"
            />
          </div>
        </div>
        <div class="flex flex-wrap -mx-3 mb-6">
          <div class="w-full px-3">
            <label
              class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
              htmlFor="grid-password"
            >
              E-mail
            </label>
            <input
              class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
              id="email"
              type="email"
              required
              name="email"
            />
          </div>
        </div>
        <div class="flex flex-wrap -mx-3 mb-6">
          <div class="w-full px-3">
            <label
              class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
              htmlFor="grid-password"
            >
              Message
            </label>
            <textarea
              class="no-resize appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 h-48 resize-none"
              id="message"
              required
              name="message"
            ></textarea>
          </div>
        </div>
        <div class="md:flex md:items-center">
          <div class="md:w-1/3">
            <button
              class="border-2 border-[#9DD9D2] shadow bg-[#9DD9D2] hover:bg-[#FFF8F0] focus:shadow-outline focus:outline-none text-black py-2 px-4 rounded transition-all delay-75 duration-300"
              type="submit"
            >
              Send
            </button>
          </div>
        </div>
      </form>
    </div>
  </body>
  <script src="./js/shapes.js"></script>
  <script
    src="https://kit.fontawesome.com/5335d21866.js"
    crossorigin="anonymous"
  ></script>
</html>
